{
    "homepage": "https://www.screenpresso.com/",
    "license": "https://www.screenpresso.com/software-license-agreement/",
    "version": "1.8.3",
    "url": "https://www.screenpresso.com/binaries/releases/stable/dotnet47/Screenpresso.exe",
    "hash": "98d89beba24ffe466619615269686472f2e886cd8bb646161018bf64bcf77dd1",
    "bin": [
        [
            "Screenpresso.exe",
            "screenpresso",
            "-portablemode"
        ]
    ],
    "shortcuts": [
        [
            "Screenpresso.exe",
            "Screenpresso",
            "-portablemode"
        ]
    ],
    "pre_install": "if (!(Test-Path \"$dir\\settings.xml\")) { New-Item -Force \"$dir\\settings.xml\" -ItemType File | out-null }",
    "post_install": [
        "if (Test-Path \"$dir\\media_bak\") { Move-Item \"$dir\\media_bak\\*.*\" -Destination \"$dir\" }",
        "if ((Get-Content \"$dir\\settings.xml\") -eq $Null) { Remove-Item \"$dir\\settings.xml\" }"
    ],
    "uninstaller": {
        "script": [
            "Move-Item \"$dir\\*.jpg\" -Destination \"$dir\\media_bak\"",
            "Move-Item \"$dir\\*.gif\" -Destination \"$dir\\media_bak\"",
            "Move-Item \"$dir\\*.png\" -Destination \"$dir\\media_bak\"",
            "Move-Item \"$dir\\*.bmp\" -Destination \"$dir\\media_bak\"",
            "Move-Item \"$dir\\*.tif\" -Destination \"$dir\\media_bak\"",
            "Move-Item \"$dir\\*.mp4\" -Destination \"$dir\\media_bak\"",
            "Move-Item \"$dir\\*.wmv\" -Destination \"$dir\\media_bak\"",
            "Move-Item \"$dir\\*.ogv\" -Destination \"$dir\\media_bak\"",
            "Move-Item \"$dir\\*.webm\" -Destination \"$dir\\media_bak\""
        ]
    },
    "persist": [
        "media_bak",
        "BrandedScreenshots",
        "Thumbnails",
        "settings.xml"
    ],
    "checkver": {
        "url": "https://www.screenpresso.com/download/",
        "re": "Latest version \\(([\\w\\.]+)\\)"
    },
    "autoupdate": {
        "url": "https://www.screenpresso.com/binaries/releases/stable/dotnet47/Screenpresso.exe"
    }
}
