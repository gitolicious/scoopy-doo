{
    "homepage": "https://www.screenpresso.com/",
    "license": "https://www.screenpresso.com/software-license-agreement/",
    "version": "1.7.7",
    "url": "https://cdn.screenpresso.com/binaries/v1/Screenpresso.exe",
    "hash": "03f7a1f7b6ae8c7b25a90368196ed549e4a788d8e071bcae0eae377d91adc86d",
    "bin": [
        [
            "Screenpresso.exe",
            "screenpresso",
            "-portablemode"
        ]
    ],
    "shortcuts": [
        [
            "Screenpresso.exe",
            "Screenpresso",
            "-portablemode"
        ]
    ],
    "pre_install": "if (!(Test-Path \"$dir\\settings.xml\")) { New-Item -Force \"$dir\\settings.xml\" -ItemType File | out-null }",
    "post_install": [
        "if (Test-Path \"$dir\\Screenshots_bak\") { Move-Item \"$dir\\Screenshots_bak\\*.*\" -Destination \"$dir\" }",
        "if ((Get-Content \"$dir\\settings.xml\") -eq $Null) { Remove-Item \"$dir\\settings.xml\" }"
    ],
    "uninstaller": {
        "script": [
            "Move-Item \"$dir\\*.jpg\" -Destination \"$dir\\Screenshots_bak\"",
            "Move-Item \"$dir\\*.gif\" -Destination \"$dir\\Screenshots_bak\"",
            "Move-Item \"$dir\\*.png\" -Destination \"$dir\\Screenshots_bak\"",
            "Move-Item \"$dir\\*.bmp\" -Destination \"$dir\\Screenshots_bak\"",
            "Move-Item \"$dir\\*.tif\" -Destination \"$dir\\Screenshots_bak\""
        ]
    },
    "persist": [
        "Screenshots_bak",
        "BrandedScreenshots",
        "Thumbnails",
        "settings.xml"
    ],
    "checkver": {
        "url": "https://www.screenpresso.com/download/",
        "re": "Latest version \\(([\\w\\.]+)\\)"
    },
    "autoupdate": {
        "url": "https://cdn.screenpresso.com/binaries/v1/Screenpresso.exe"
    }
}
